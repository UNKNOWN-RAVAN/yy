<body>
  <header class="common-header">
    <button class="back-button" onclick="location.href='/home'">
      <span class="material-icons">arrow_back</span>
      Back
    </button>
    <h1 class="header-title">RAVAN</h1>
  </header>

  <div class="controls">
    <input type="text" id="search" class="search-input" placeholder="ðŸ” Search batches..." oninput="filterBatches()">
  </div>

  <div class="grid-container" id="batchesGrid"><p style="text-align:center;">Loading batches...</p></div>

  <script>
    let allBatches = [];

    async function loadBatches() {
      const grid = document.getElementById('batchesGrid');
      grid.innerHTML = '<p style="text-align:center;">Loading batches...</p>';
      try {
        const res = await fetch('https://sunnyji7256.github.io/kgs_batch_list/New_Sunny.json');
        allBatches = await res.json();
        renderBatches(allBatches);
      } catch (e) {
        grid.innerHTML = '<p>Error loading batches.</p>';
      }
    }

    function isFav(id) {
      const favs = JSON.parse(localStorage.getItem('favouriteCourses') || '[]');
      return favs.some(f => String(f.id) === String(id));
    }

    function toggleFav(batch) {
      let favs = JSON.parse(localStorage.getItem('favouriteCourses') || '[]');
      const exists = favs.some(f => String(f.id) === String(batch.id));
      if (exists) {
        favs = favs.filter(f => String(f.id) !== String(batch.id));
      } else {
        favs.push(batch);
      }
      localStorage.setItem('favouriteCourses', JSON.stringify(favs));
      filterBatches();
    }

    function formatDate(dateStr) {
      if (!dateStr) return 'N/A';
      const date = new Date(dateStr);
      const options = { day: '2-digit', month: 'short', year: 'numeric' };
      return date.toLocaleDateString('en-GB', options).replace(/ /g, ' ');
    }

    function renderBatches(list) {
      const grid = document.getElementById('batchesGrid');
      grid.innerHTML = '';
      if (list.length === 0) {
        grid.innerHTML = '<p style="text-align:center;">No batches found.</p>';
        return;
      }

      list.forEach(b => {
        const card = document.createElement('div');
        card.className = 'card';
        card.addEventListener('click', () => window.location = '/batch/' + b.id);

        const img = document.createElement('img');
        img.src = b.image_large || '';
        card.appendChild(img);

        const content = document.createElement('div');
        content.className = 'card-content';

        const h3 = document.createElement('h3');
        h3.textContent = b.title || '';

        const p = document.createElement('p');
        p.textContent = 'Start: ' + formatDate(b.start_at);

        const btn = document.createElement('button');
        btn.className = 'btn-fav' + (isFav(b.id) ? ' active' : '');
        btn.textContent = isFav(b.id) ? 'â˜… Favorited' : 'â˜† Add to Favorites';
        btn.addEventListener('click', ev => { ev.stopPropagation(); toggleFav(b); });

        content.appendChild(h3);
        content.appendChild(p);
        content.appendChild(btn);
        card.appendChild(content);
        grid.appendChild(card);
      });
    }

    function filterBatches() {
      const q = document.getElementById('search').value.toLowerCase();
      renderBatches(allBatches.filter(b => b.title.toLowerCase().includes(q)));
    }

    window.addEventListener('DOMContentLoaded', loadBatches);
  </script>

</body></html>
